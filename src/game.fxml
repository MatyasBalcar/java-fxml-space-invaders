<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Button?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="GameController" style="-fx-background-color: #555555;">
    <Text fx:id="ScoreField" layoutX="10.0" layoutY="30.0" style="-fx-font-size: 24px; " text="Score: 0"/>
    <Canvas fx:id="gameCanvas" width="600.0" height="800.0"/>
    <ProgressBar  fx:id="progressBar" layoutX="250.0" layoutY="10.0" prefHeight="40.0" prefWidth="100.0" progress="1" />
    <Button fx:id="startButton" style="-fx-font-size: 16px;" layoutX="225" text="Start Game" layoutY="350" prefWidth="150" prefHeight="50" onAction="#onStartButtonClick"/>
    <Text fx:id="HealthField" layoutX="460.0" layoutY="30.0" style="-fx-font-size: 24px;" text="Health: 0"/>

</AnchorPane>
